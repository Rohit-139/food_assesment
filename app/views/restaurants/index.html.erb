<div>
	<div style="text-align: right;">
  <%= button_to "Logout", logout_path, method: :delete, data: { turbo_confirm: "Are you sure you want to logout?" } %>
</div>

	<h1>All Restaurants of <%= current_user.name %> </h1>
	<% if @restaurants.present? %>
	<table border="5px" cellpadding="5px" cellspacing="5px">
		<th>Name</th>
		<th>Description</th>
		<th>Rating</th>
		<th>Edit</th>
		<th>Details</th>
		<th>Delete</th>
	<% @restaurants.each do |restaurant| %>
	    <tr>
		 <td><h4><%= restaurant.name %></h4></td>
		 <td><h4><%= restaurant.description %></h4></td>
		 <td><h4><%= restaurant.rating %></h4></td>
		 <td><h4><%= link_to 'Edit', edit_restaurant_path(restaurant) %></h4></td>
		 <td><h4><%= link_to 'Details', restaurant_path(restaurant) %></h4></td>
		 <td><h4><%= button_to "Delete", restaurant_path(restaurant), method: :delete, data: { turbo_confirm: "Are you sure?" } %></h4>
</td>
		</tr>
	
	<% end %>
</table>
<% else %>
<h1>No restaurent registered to this user</h1>
<% end%>

<h3><%= link_to 'Create a Restaurant ' ,new_restaurant_path %></h3>
</div>




		
	