<div>
  <h1>Restaurant details </h1>
  <h3> Name : <%= @restaurant.name %></h3>
  <h3> description : <%= @restaurant.description %></h3>
  <h3> Rating : <%= @restaurant.rating %></h3>

  <!-- NEW BUTTON : View Orders -->
  <div style="margin-top:15px;">
    <%= link_to "ðŸ“‹ View Orders",
          restaurant_orders_path(@restaurant.id),
          style: "text-decoration:none;
                  background:#007bff;
                  color:#fff;
                  padding:8px 14px;
                  border-radius:4px;
                  display:inline-block;" %>
  </div>
</div>

<h1 align="center">Dishes</h1>

<div style="display: flex">
  <% @dishes.take(4).each do |dish| %>
    <div style="margin-right:20px;">
      <h4>name : <%= dish.name %> </h4>
      <h4>description : <%= dish.description %> </h4>
      <h4>price : <%= dish.price %> </h4>
    </div>
  <% end %>
</div>

<h5 align="center">
  <%= link_to 'See All dishes', restaurant_dishes_path(@restaurant) %>
</h5>

<h5 align="center">
  <%= link_to 'Add new Dish', new_restaurant_dish_path(@restaurant) %>
</h5>
