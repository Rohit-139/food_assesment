<div style="background-color: LightGray">
	<h1 align="center">Log In</h1>

<%= form_with(url: login_path, scope: :sessions, local: true) do |form| %>
  <div align="center" class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Enter your email" %>
  </div> <br> <br>

  <div align="center" class="field">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
  </div> <br> <br>

  <div align="center" class="actions">
    <%= form.submit "Log In" %>
  </div> 
<% end %>

<h3 align="center"> <%= link_to "Sign up", home_path %> </h3>

</div>