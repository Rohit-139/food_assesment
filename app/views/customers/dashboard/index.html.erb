<div style="max-width: 900px; margin: auto;">


  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Welcome, <%= current_user.name %> ğŸ‘‹</h1>

    <%= button_to "Logout",
          logout_path,
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to logout?" } %>
  </div>

  <% count = current_user.cart.cart_items.count %>
  <div style="text-align: right; margin-bottom: 20px;">
  <%= link_to "ğŸ›’ View Cart (#{count}) ", cart_path, class: "btn btn-primary" %>
</div>

 <div style="text-align: right; margin-bottom: 20px;">
  <%= link_to " View Orders", orders_path, class: "btn btn-primary" %>
</div>


  <div style="text-align: right; margin-bottom: 20px;">
  <%= link_to "Search restaurant", customers_search_path, class: "btn btn-primary" %>
</div>


  <hr>

  <!-- Restaurants List -->
  <h2>All Restaurants</h2>

  <% if @restaurants.present? %>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 20px;">

      <% @restaurants.each do |restaurant| %>
        <div style="border: 1px solid #ccc; padding: 15px; border-radius: 8px;">
          
          <h3><%= restaurant.name %></h3>

          <p style="color: #555;">
            <%= truncate(restaurant.description, length: 100) %>
          </p>

            <p>â­ Rating: <%= restaurant.rating %>/5</p>

          <%= link_to "View Dishes",
                customers_path(restaurant),
                style: "display: inline-block; margin-top: 10px;" %>
        </div>
      <% end %>

    </div>
  <% else %>
    <p>No restaurants available at the moment.</p>
  <% end %>

</div>
